<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	xmlns:local="clr-namespace:MCCForms;assembly=MCCForms"
	x:Class="MCCForms.TabBarPage">

	<TabbedPage.Children>
		
		<NavigationPage
			BarBackgroundColor="{DynamicResource ColorToolbarBackground}"
			Title="Afspraken"
			Icon="key.png">
			<x:Arguments>
	      		<local:ItemListPage />
			</x:Arguments>
		</NavigationPage>

		<NavigationPage
			BarBackgroundColor="{DynamicResource ColorToolbarBackground}"
			Title="Profiel"
			Icon="rss.png">
			<x:Arguments>
	      		<local:RssFeedPage />
			</x:Arguments>
		</NavigationPage>

	</TabbedPage.Children>

</TabbedPage>